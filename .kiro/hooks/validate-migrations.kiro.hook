{
  "enabled": true,
  "name": "Validate Migrations",
  "description": "Auto-generate migrations on schema changes by running npm run db:migrate when SQL migration files are saved",
  "version": "1",
  "when": {
    "type": "fileCreated",
    "patterns": [
      "migrations/**/*.sql"
    ]
  },
  "then": {
    "type": "askAgent",
    "prompt": "Run `npm run db:migrate` to apply the database migrations and verify they execute successfully"
  }
}
